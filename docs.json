{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "quill",
  "name": "NeoSpeech API",
  "colors": {
    "primary": "#000000",
    "light": "#3B3B3B",
    "dark": "#000000",
    "background": {
      "light": "#FFFFFF",
      "dark": "#0A0A0A"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "quickstart",
              "authentication"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/voices",
              "concepts/models",
              "concepts/rate-limits"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/speech",
              "api-reference/stream",
              "api-reference/balance",
              "api-reference/voices",
              "api-reference/models"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "api-reference/errors",
              "api-reference/response-codes"
            ]
          }
        ]
      },
      {
        "tab": "SDK & Examples",
        "groups": [
          {
            "group": "Code Examples",
            "pages": [
              "examples/javascript",
              "examples/python",
              "examples/curl"
            ]
          },
          {
            "group": "Integration Guides",
            "pages": [
              "guides/streaming",
              "guides/error-handling",
              "guides/best-practices"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://neospeech.io",
          "icon": "square-terminal"
        },
        {
          "anchor": "Support",
          "href": "https://neospeech.io/support",
          "icon": "life-ring"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "API Status",
        "href": "https://status.neospeech.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://neospeech.io"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/neospeech",
      "github": "https://github.com/neospeech"
    }
  }
}
